@model PageNavigationModel

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @{if (Model.PreviousPage is null) {<text>disabled</text>}}">
            <a class="page-link" asp-action="Index" asp-route-search="@Model.SearchString"
               asp-route-page="@Model.PreviousPage" asp-route-count="@Model.PageSize">
                Anterior
            </a>
        </li>
        <li class="page-item @{if (Model.NextPage is null) {<text>disabled</text>}}">
            <a class="page-link" asp-action="Index" asp-route-search="@Model.SearchString"
               asp-route-page="@Model.NextPage" asp-route-count="@Model.PageSize">
                Siguiente
            </a>
        </li>
    </ul>
</nav>
