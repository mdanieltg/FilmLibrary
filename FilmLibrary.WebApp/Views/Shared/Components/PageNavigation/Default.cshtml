@model PageNavigationModel

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.PreviousPage is null)
        {
            <li class="page-item disabled">
                <span class="page-link">Anterior</span>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@Model.PreviousPage" asp-route-count="@Model.PageSize">
                    Anterior
                </a>
            </li>
        }
        <li class="page-item active">
            <a class="page-link" asp-action="Index" asp-route-page="@Model.CurrentPage" asp-route-count="@Model.PageSize">
                Actual
            </a>
        </li>
        @if (Model.NextPage is null)
        {
            <li class="page-item disabled">
                <span class="page-link">Siguiente</span>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@Model.NextPage" asp-route-count="@Model.PageSize">
                    Siguiente
                </a>
            </li>
        }
    </ul>
</nav>
