@model FilmLibrary.Domain.Entities.Director
@{ ViewData["Title"] = "Detalle de director"; }

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
        <li class="breadcrumb-item"><a asp-controller="Directors" asp-action="Index">Directores</a></li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ol>
</nav>

<h2>@ViewData["Title"]</h2>

<div>
    <dl>
        <dt>Id</dt>
        <dd>@Model.Id</dd>
    </dl>
    <dl>
        <dt>Nombre</dt>
        <dd>@Model.Name</dd>
    </dl>
</div>

<div class="mt-2">
    <a asp-action="Edit" asp-route-directorId="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Delete" asp-route-directorId="@Model.Id" class="btn btn-danger">Eliminar</a>
    <a asp-action="Index" class="btn btn-info">Volver a la lista</a>
</div>
