@model IEnumerable<FilmLibrary.Domain.Entities.Genre>
@{ ViewData["Title"] = "Géneros"; }

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ol>
</nav>

<h2>@ViewData["Title"]</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var genre in Model)
    {
        <tr>
            <td>@genre.Id</td>
            <td>@genre.Name</td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { genreId = genre.Id }) |
                @Html.ActionLink("Detalles", "Details", new { genreId = genre.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { genreId = genre.Id })
            </td>
        </tr>
    }
    </tbody>
</table>
