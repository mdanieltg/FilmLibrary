@model Genre
@{ ViewData["Title"] = "Crear género"; }

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
        <li class="breadcrumb-item"><a asp-controller="Genres" asp-action="Index">Géneros</a></li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ol>
</nav>

<h2>@ViewData["Title"]</h2>

<form method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3 text-danger" asp-validation-summary="All"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Nombre</label>
        <input type="text" asp-for="Name" class="form-control">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="">
        <input type="submit" value="Crear" class="btn btn-primary">
        <input type="reset" value="Restablecer" class="btn btn-secondary">
    </div>
</form>

<p class="mt-3">
    @Html.ActionLink("Volver a la lista", "Index")
</p>
